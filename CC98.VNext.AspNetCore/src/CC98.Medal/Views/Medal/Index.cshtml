@model IPagedList<Medal>
@{
	ViewBag.PageTitle = "勋章列表";
}

<div class="row">
	<div class="col-md-2">
		@await Component.InvokeAsync("MedalCategoryList")
	</div>
	<div class="col-md-10">
		@if (Model.Any())
		{
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th>名称</th>
						<th>分类</th>
						<th>获得途径</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var i in Model)
				{
						<tr>
							<th>@i.Name</th>
							<td>
								@if (i.Category != null)
								{
									<a asp-controller="Medal" asp-action="Index" asp-route-category="@i.CategoryId">@i.Category.Name</a>
								}
								else
								{
									<span class="text-muted">无</span>
								}
							</td>
						</tr>
				}
				</tbody>
			</table>
		}
		else
		{
			<p class="text-center text-muted">目前没有可以显示的勋章</p>
		}
	</div>
</div>

<hr />
<a asp-controller="Medal" asp-action="Create" class="btn btn-default btn-primary">添加新勋章</a>

