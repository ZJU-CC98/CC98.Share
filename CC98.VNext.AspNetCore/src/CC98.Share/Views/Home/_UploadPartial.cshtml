@model CC98.Share.ViewModels.FileController.UploadViewModel

@* 如果没有禁止显示消息，则默认显示消息 *@
@if (ViewBag.ShowOperationMessages != false)
{
	<div asp-message-list="AlertDialogClosable"></div>
}

@section scripts{
	@await RenderSectionAsync("scripts", false);
}


<form class="form-inline" style="float: left; text-align: left;" asp-action="Upload" asp-controller="File" asp-antiforgery="true" enctype="multipart/form-data">
	<input asp-for="Files" id="lefile" type="file" style="display: none; float: left; text-align: left;" onchange="JudgeFile(this)" multiple="multiple" />
	<div class="input-append" >
		
		<a onclick="$('input[id=lefile]').click();">
			<input id="photoCover" class="btn btn-default" type="text" value="选择一个或多个文件" style="text-align: left">

			
        </a>
		<!-- Split button -->
		<!-- Split button -->
		<input asp-for="Value" type="hidden" id="Shared" value="false">
			
		<div class="btn-group">
			<button id="uploadFile" type="submit" class="btn btn-default dropdown-toggle" disabled="disabled">上传文件</button>
			<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
				<span class="caret"></span>&nbsp;

				
			</button>
			<ul class="dropdown-menu">
				<li><a onclick="$('Shared').val('true')">分享</a></li>
				<li><a onclick="$('Shared').val('false')">不分享</a></li>
			</ul>
		</div>
		
		
    </div>
	
</form>